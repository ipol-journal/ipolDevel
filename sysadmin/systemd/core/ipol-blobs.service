[Unit]
Description=Run blobs
After=network.target

[Service]
ExecStart=/bin/bash -c "source ./venv/bin/activate && uvicorn archive:app --host 0.0.0.0 --port 9001"
WorkingDirectory=/home/ipol/ipolDevel/ipol_demo/modules/blobs/
Environment=IPOL_HOST=ipolcore.ipol.im
Environment=IPOL_URL=https://ipolcore.ipol.im
RestartSec=10
Restart=always
SyslogIdentifier=ipol-blobs

[Install]
WantedBy=default.target
